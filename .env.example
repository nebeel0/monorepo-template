# Project Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# Application Settings
# =============================================================================

APP_NAME=myapp
APP_PORT=8000
IS_LOCAL=true
DEBUG=false

# =============================================================================
# Database Configuration
# =============================================================================

POSTGRES_USER=myapp
POSTGRES_PASSWORD=myapp_dev
POSTGRES_DB=myapp_db
POSTGRES_PORT=5434

# Full database URL (constructed from above or override directly)
DB_URL=postgresql+asyncpg://myapp:myapp_dev@localhost:5434/myapp_db

# =============================================================================
# Redis Configuration
# =============================================================================

REDIS_PORT=6381
REDIS_URL=redis://localhost:6381/0

# =============================================================================
# Authentication
# =============================================================================

# JWT secret key - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -hex 32
SECRET=CHANGE_ME_IN_PRODUCTION_USE_LONG_RANDOM_STRING_HERE

# JWT token lifetime in seconds (default: 1 hour)
JWT_LIFETIME_SECONDS=3600

# =============================================================================
# Frontend Configuration
# =============================================================================

# API base URL for Flutter app
API_BASE_URL=http://localhost:8000
