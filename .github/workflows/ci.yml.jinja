name: CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

env:
  PYTHON_VERSION: "3.12"
  FLUTTER_VERSION: "3.24.0"

jobs:
  backend-lint:
    name: Backend Lint
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v4
        with:
          version: "latest"

      - name: Set up Python
        run: uv python install ${{ env.PYTHON_VERSION }}

      - name: Install dependencies
        working-directory: apps/backend
        run: uv sync

      - name: Run ruff
        working-directory: apps/backend
        run: uv run ruff check .

      - name: Run ruff format check
        working-directory: apps/backend
        run: uv run ruff format --check .

      - name: Run mypy
        working-directory: apps/backend
        run: uv run mypy . --ignore-missing-imports

  backend-test:
    name: Backend Tests
    runs-on: ubuntu-latest

    services:
      postgres-app:
        image: postgres:16-alpine
        env:
          POSTGRES_USER: test
          POSTGRES_PASSWORD: test
          POSTGRES_DB: test_app_db
        ports:
          - 5432:5432
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5

      postgres-users:
        image: postgres:16-alpine
        env:
          POSTGRES_USER: test
          POSTGRES_PASSWORD: test
          POSTGRES_DB: test_users_db
        ports:
          - 5433:5432
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5

      redis:
        image: redis:7-alpine
        ports:
          - 6379:6379
        options: >-
          --health-cmd "redis-cli ping"
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5

    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v4
        with:
          version: "latest"

      - name: Set up Python
        run: uv python install ${{ env.PYTHON_VERSION }}

      - name: Install dependencies
        working-directory: apps/backend
        run: uv sync

      - name: Run tests with coverage
        working-directory: apps/backend
        env:
          APP_DB_URL: postgresql+asyncpg://test:test@localhost:5432/test_app_db
          USERS_DB_URL: postgresql+asyncpg://test:test@localhost:5433/test_users_db
          REDIS_URL: redis://localhost:6379/0
          SECRET: test-secret-key-for-ci
        run: uv run pytest --cov=app --cov=core --cov-report=xml --cov-fail-under=80

      - name: Upload coverage to Codecov
        uses: codecov/codecov-action@v4
        with:
          files: apps/backend/coverage.xml
          flags: backend
          fail_ci_if_error: false

  frontend-test:
    name: Frontend Tests
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Set up Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: ${{ env.FLUTTER_VERSION }}
          channel: stable
          cache: true

      - name: Install dependencies
        working-directory: apps/frontend
        run: flutter pub get

      - name: Run code generation
        working-directory: apps/frontend
        run: flutter pub run build_runner build --delete-conflicting-outputs

      - name: Analyze code
        working-directory: apps/frontend
        run: flutter analyze

      - name: Run tests
        working-directory: apps/frontend
        run: flutter test --coverage

  frontend-build:
    name: Frontend Build
    runs-on: ubuntu-latest
    needs: frontend-test

    steps:
      - uses: actions/checkout@v4

      - name: Set up Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: ${{ env.FLUTTER_VERSION }}
          channel: stable
          cache: true

      - name: Install dependencies
        working-directory: apps/frontend
        run: flutter pub get

      - name: Run code generation
        working-directory: apps/frontend
        run: flutter pub run build_runner build --delete-conflicting-outputs

      - name: Build web
        working-directory: apps/frontend
        run: flutter build web --release
{% endraw %}
