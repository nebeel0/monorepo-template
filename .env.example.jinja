# Project Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# Application Settings
# =============================================================================

APP_NAME={{ project_slug }}
APP_PORT=8000
IS_LOCAL=true
DEBUG=false

# =============================================================================
# App Database Configuration
# =============================================================================

APP_DB_USER={{ project_slug }}
APP_DB_PASSWORD={{ project_slug }}_dev
APP_DB_NAME={{ project_slug }}_app_db
APP_DB_PORT=5434

# Full database URL (constructed from above or override directly)
APP_DB_URL=postgresql+asyncpg://{{ project_slug }}:{{ project_slug }}_dev@localhost:5434/{{ project_slug }}_app_db

# =============================================================================
# Users Database Configuration
# =============================================================================

USERS_DB_USER={{ project_slug }}
USERS_DB_PASSWORD={{ project_slug }}_dev
USERS_DB_NAME={{ project_slug }}_users_db
USERS_DB_PORT=5435

# Full database URL (constructed from above or override directly)
USERS_DB_URL=postgresql+asyncpg://{{ project_slug }}:{{ project_slug }}_dev@localhost:5435/{{ project_slug }}_users_db

# =============================================================================
# Redis Configuration
# =============================================================================

REDIS_PORT=6381
REDIS_URL=redis://localhost:6381/0

# =============================================================================
# CORS Configuration
# =============================================================================

CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Authentication
# =============================================================================

# Secret key - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -hex 32
SECRET=CHANGE_ME_IN_PRODUCTION_USE_LONG_RANDOM_STRING_HERE

# JWT token lifetime in seconds (default: 1 hour)
JWT_LIFETIME_SECONDS=3600

# =============================================================================
# OAuth (Google)
# =============================================================================

# Get credentials from https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=INFO

# =============================================================================
# Frontend Configuration
# =============================================================================

# API base URL for Flutter app
API_BASE_URL=http://localhost:8000
